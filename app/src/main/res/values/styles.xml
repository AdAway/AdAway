<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AdAway" parent="Base.AdAway" />

    <style name="Base.AdAway" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primaryVariant</item>
        <item name="colorOnSecondary">@color/onPrimary</item>

        <!--Remap legacy AppCompat attributes to MaterialComponent attributes-->
        <item name="colorPrimaryDark">?colorPrimary</item>

        <item name="switchPreferenceCompatStyle">@style/MaterialPreferenceSwitch</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.AdAway.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primaryVariant</item>
        <item name="colorOnSecondary">@color/onPrimary</item>

        <item name="switchPreferenceCompatStyle">@style/MaterialPreferenceSwitch</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.AdAway.NoActionBar.Monet" parent="Theme.AdAway.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="MaterialPreferenceSwitch" parent="@style/Preference.SwitchPreferenceCompat.Material">
        <item name="widgetLayout">@layout/view_preference_switch</item>
    </style>
</resources>
